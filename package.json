{
  "name": "sac-online",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env -- pnpm services:dev:up && pnpm wait:pg:dev && pnpm db:migrate up && next dev --turbopack",
    "services:dev:up": "docker compose -f ./infra/docker/dev.compose.yml up -d ",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "dotenv -e .env.test -- pnpm services:test:up && pnpm wait:pg:test && jest --detectOpenHandles --verbose",
    "services:test:up": "docker compose -f ./infra/docker/test.compose.yml up -d ",
    "test:unit": "jest --verbose --config ./jest.config.unit.ts",
    "test:watch": "jest --watch",
    "wait:pg": "pnpm dlx ts-node ./infra/scripts/wait-for-pg.ts",
    "wait:pg:dev": "pnpm dlx ts-node ./infra/scripts/wait-for-pg.ts dev-db",
    "wait:pg:test": "pnpm dlx ts-node ./infra/scripts/wait-for-pg.ts test-db",
    "db:migrate": "node-pg-migrate --tsconfig ./tsconfig.json -m infra/database/migrations"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@jest/types": "^30.0.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "node-pg-migrate": "^7.9.1",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3"
  }
}
